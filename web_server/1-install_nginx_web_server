#!/usr/bin/env bash
# This script installs nginx, configures it to serve a page containing "Holberton School for the win!", and restarts nginx.
apt-get update -y
apt-get install -y nginx

# Create a custom index page with the required string
echo "Holberton School for the win!" > /var/www/html/index.nginx-debian.html

# Restart nginx using service (not systemctl)
service nginx restart
