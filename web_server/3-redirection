#!/usr/bin/env bash
# This script configures nginx to redirect /redirect_me/ to a specific URL with a 301 Moved Permanently response.
NGINX_CONF="/etc/nginx/sites-available/default"
cp "$NGINX_CONF" "${NGINX_CONF}.bak"

# Insert the location block after the first occurrence of "server {"
sed -i '/server {/a \
    location /redirect_me/ {\
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\
    }' "$NGINX_CONF"

# Restart nginx using the service command
service nginx restart
